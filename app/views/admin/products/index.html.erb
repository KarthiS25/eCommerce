<div class="container-fluid">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><% notice %></p>
    <% end %>

    <div class="card card-head mt-2">
    <div class="container-fluid flex justify-between items-center mb-2 mt-2">
      <h2 class="font-bold text-4xl" style="text-align:center">Products</h2>
      <%= link_to 'New Product',  new_product_path, class: "btn btn-outline-primary" %>
    </div>
    </div>
    <div class="card">
      <div class="card-body">
        <div id="products" class="min-w-full">
          <%= render 'layouts/product' %>
        </div>
      </div>
    </div>
</div>