<%= form_with(model: product, local: true, class: "forms-sample") do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li style="list-style-type: none; margin-left: -1rem;">
            <span class="badge badge-sm bg-gradient-danger"><%= message %></span>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
  <div class="aestric-container">
    <div ><%= f.label :name %> </div> <div class="aestric-color">*</div>
  </div>
    <%= f.text_field :name, class: "form-control", placeholder: "Name", required: true %>
  </div>

  <div class="form-group">
  <div class="aestric-container">
    <div><%= f.label :description %> </div> <div class="aestric-color">*</div>
  </div>
    <%= f.text_area :description, class: "form-control", placeholder: "Description", required: true %>
  </div>

  <div class="form-group">
  <div class="aestric-container">
    <div> <%= f.label :price %> </div> <div class="aestric-color">*</div>
  </div>
    <%= f.number_field :price, class: "form-control", placeholder: "â‚¹Price", required: true %>
  </div>

  <div class="form-group">
  <div class="aestric-container">
    <div> <%= f.label :images %> </div> <div class="aestric-color">*</div>
  </div>
    <%= f.file_field :images, class: "form-control", :multiple => true, required: true %><br>
  </div>

  <% if action_name == "edit" || action_name == "update" %>
    <%= f.submit "Update Product",  data: { confirm: 'Are you sure you have to update this?' }, class: "btn btn-primary mr-2" %>
  <% else %>
    <%= f.submit "Create Product", class: "btn btn-primary mr-2" %>
  <% end %>
  <%= link_to "Back", products_path, class: "btn btn-light" %>
<% end %>
