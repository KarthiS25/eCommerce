<%= stylesheet_link_tag "nav_bar" %>
<nav class="navbar navbar-expand-sm navbar-light px-4 sticky-top">
  <div class="navbar-brand">
    <a href="http://localhost:3000/admin/products">
      <%= image_tag "dreamday.jpg", width: "100%", height: "34px", class: "mr-2", alt: "logo" %>
    </a>
  </div>
  <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse navigation" id="navbarToggleExternalContent">
    <ul class="navbar-nav ml-auto align-items-sm-center">
      <li class="nav-item m-1 mx-sm-2">
        <div class="username-holder">
          <% if current_user %>
          <div class="d-flex justify-content-start align-items-center text-dark">
            <i class="fa fa-user-circle"></i>
            <p class="text-capitalize m-1 ml-2 font-weight-bold"><%= current_user.name %></p>
          </div>
          <% end %>
        </div>
      </li>

      <li class="nav-item m-1 mx-sm-2">
        <% if user_signed_in? %>
          <span><%= button_to "logout", destroy_user_session_path, class:"bi bi-box-arrow-in-left btn btn-danger btn-sm shadow-none", method: :delete %></span>
        <% end %>
      </li>
    </ul>
  </div>
</nav>

  

